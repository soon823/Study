<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.ReplyMapper">

	<select id="selectList" parameterType="int" resultType="reply">
		select *
		from   tbl_reply
		where  board_no = #{boardNo}
	</select>
	
	<insert id="insertReply" parameterType="reply">
		insert into tbl_reply(reply_no, reply, replyer, board_no)
		values(reply_seq.nextval, #{reply}, #{replyer}, #{boardNo})
	</insert>
	
	<delete id="deleteReply" parameterType="int">
		delete from tbl_reply
		where board_no = #{boardNo}
	</delete>
	
	<select id="selectReply" parameterType="int" resultType="reply">
		select 	reply_no,
    			reply,
    			replyer,
    			board_no,
    			reply_date
    	from 	tbl_reply
    	where 	reply_no = #{replyNo}
	</select>

</mapper>